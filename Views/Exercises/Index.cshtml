@model WorkoutTracker.Models.ViewModel.ExerciseAndMuscleViewModel
<link rel="stylesheet" href='~/css/index.css' />
<link rel="stylesheet" href='~/css/exerciseIndex.css' />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<h1>Seus exercícios</h1>
<hr />
<section>
	<a class="btn btn-Voltar" asp-action="Index" asp-controller="Workouts">Ir para Treinos</a>
</section>
<section class="flex-rowAndColumn">
	<div id="info">
		<div class="card">
			<a asp-action="Create" class="btn item item--2">
				<i class='fas fa-running' style='font-size:40px'></i>
				<span class="quantity"></span>
				<span class="text text--1">Adicionar novo exercício</span>
			</a>
			<div class="item item--1">
				<i class="fas fa-dumbbell" style="font-size:40px;" aria-hidden="true"></i>
				<span class="quantity">@Model.Exercises!.Count</span>
				<span class="text text--1">Quantidade de exercícios</span>
			</div>
		</div>
	</div>
	<div>
		<div id="lista">
			<h5>Lista</h5>
			<select class="custom-select" id="filtro">
				<option id="0">Filtar por músculo</option>
				@foreach (var muscles in Model.Muscles!)
				{
					<option>@muscles.Name</option>
				}
			</select>
			@foreach (var exercise in Model.Exercises)
			{
				<div>
					<span id="exerciseName">@exercise.Name - </span>
					@foreach (var muscle in exercise.Muscles)
					{
						<span class="muscleName">@muscle.Name</span>
						<section id="editDelete">
							<a asp-action="Edit" asp-route-id="@exercise.Id"><i class="fa fa-pencil-square-o"></i></a>
							<a asp-action="Delete" asp-route-id="@exercise.Id"><i class="fa fa-trash"></i></a>
						</section>
					}
				</div>
			}

		</div>
	</div>
</section>
@section Scripts{
<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
<script src="@Url.Content("~/js/exerciseIndex.js")" type="text/javascript"></script>
}